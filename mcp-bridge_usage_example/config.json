{
    "inference_server": {
        "base_url": "https://api.openai.com/v1"
    },
    "sampling": {
        "timeout": 30,
        "models": [
            {
                "model": "gpt-4.1-mini",
                "intelligence": 0.9,
                "cost": 0.8,
                "speed": 0.6
            }
        ]
    },
    "mcp_servers": {
        "translation_helps": {
            "command": "uvx",
            "args": [
                "git+https://github.com/JEdward7777/translation_helps_mcp_proxy.git",
                "--enabled-tools",
                "fetch_translation_notes"
            ]
        }
    },
    "network": {
        "host": "0.0.0.0",
        "port": 8000
    },
    "logging": {
        "log_level": "INFO"
    }
}